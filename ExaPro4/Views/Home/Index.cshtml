@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   
    <img src="https://www.diez.hn/binrepository/1152x864/0c0/0d0/none/3014757/FSPV/memes-real-madrid_10586053_20250426203819.jpg"
         alt="Meme" style="width:400px; height:500px;" />

    <div class="mt-4">
        <input type="text" id="campoTexto" class="form-control" placeholder="Escribe algo aquí" style="max-width:400px;margin:auto;">
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-info btn-lg" onclick="mostrarAlerta()">Mostrar Alerta</button>
