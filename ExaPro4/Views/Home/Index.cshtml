@section Scripts {
    <script>
        function mostrarAlerta() {
            var valorCampo = document.getElementById('campoTexto').value;
            alert("Mi nombre es Fabio Gonzalez, mi hobbie es Jugar videojeugos y el valor del campo de texto es: " + valorCampo);
        }
    </script>
}
